<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RCL_Inventory</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="//cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="~/css/sitee.css" />
</head>
<body>
    <header>
        <div id="main">
            <div class="container">
                <div style="margin-top:10px;margin-bottom:10px;text-align:center;">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/images/logoRCLfinal.png" style="width:100px;margin-bottom:15px">
                    </a>
                    <h3 class="title" >Inventory Solution Manager</h3>
                </div>
                <nav>
                    <div class="nav-fostrap text-center">
                        <ul>
                            <li><a asp-area="" asp-controller="Home" asp-action="Index">Dashboard</a></li>

                            <li>
                                <a asp-area="" asp-controller="Categories" asp-action="Index">Categories<span class="arrow-down"></span></a>
                                
                                <ul class="dropdown">
                                    <li><a asp-area="" asp-controller="Categories" asp-action="Index">Categories</a></li>
                                    <li><a asp-area="" asp-controller="Categories" asp-action="Create">New Product Category</a></li>

                                </ul>
                            </li>

                            <li>
                                <a asp-area="" asp-controller="Products" asp-action="Index">Products<span class="arrow-down"></span></a>
                                <ul class="dropdown">
                                    <li><a asp-area="" asp-controller="Products" asp-action="Index">Products</a></li>
                                    <li><a asp-area="" asp-controller="Products" asp-action="Create">Create a new Product</a></li>
                                </ul>
                            </li>
                            <li><a asp-area="" asp-controller="Transactions" asp-action="Index">Transaction</a></li>
                            <li><a asp-area="" asp-controller="Addresses" asp-action="Index">Addresses</a></li>
                            <li><a asp-area="" asp-controller="Suppliers" asp-action="Index">Suppliers</a></li>
                            <li><a asp-area="" asp-controller="Users" asp-action="Index">Users</a></li>
                            @*<li><a asp-area="" asp-controller="Users" asp-action="Index">Login</a></li>*@
                        </ul>

                    </div>
                </nav>
            </div>

            <div class="nav-bg-fostrap">
                <div class="navbar-fostrap"> <span></span> <span></span> <span></span> </div>
                <a href="" class="title-mobile"></a>
            </div>
            <div class='content'>
            </div>
        </div>

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <div style="margin-top:auto;">
                &copy; 2022 - RCL Solutions - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
    <script src="//cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>