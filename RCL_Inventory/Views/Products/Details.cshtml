@model RCL_Inventory.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>



<div class="card mt-3">
    <div class="card-header font-weight-bolder bg-dark text-white d-flex justify-content-center"> Product Information</div>
    <div class="card-body">
        <div class="card-body row">
            <div class="form-group col-md">
                <label class="d-flex justify-content-center">
                    @Html.DisplayNameFor(model => model.ProductId)
                </label>
                <input class="form-control" disabled value="@Html.DisplayFor(model => model.ProductId)" />
            </div>

            <div class="form-group col-md">
                <label class="d-flex justify-content-center">
                    @Html.DisplayNameFor(model => model.Name)
                </label>
                <input class="form-control" disabled value="@Html.DisplayFor(model => model.Name)" />
            </div>
            <div class="form-group col-md">
                <label class="d-flex justify-content-center">
                    @Html.DisplayNameFor(model => model.Brand)
                </label>
                <input class="form-control" disabled value="@Html.DisplayFor(model => model.Brand)" />
            </div>
        </div>
        <div class="form-group col-md">
            <label class="d-flex justify-content-center">
                @Html.DisplayNameFor(model => model.Description)
            </label>
            <input class="form-control" disabled value="@Html.DisplayFor(model => model.Description)" />
        </div>

    </div>
</div>

<div class="card mt-3">
    <div class="card-header font-weight-bolder bg-dark text-white d-flex justify-content-center"> Category Information</div>
    <div class="card-body">
        <div class="card-body row">
            <div class="form-group col-md">
                <label class="d-flex justify-content-center">
                    @Html.DisplayNameFor(model => model.Category.CategoryId)
                </label>
                <input class="form-control" disabled value="@Html.DisplayFor(model => model.Category.CategoryId)" />
            </div>

            <div class="form-group col-md">
                <label class="d-flex justify-content-center">
                    @Html.DisplayNameFor(model => model.Category.Name)
                </label>
                <input class="form-control" disabled value="@Html.DisplayFor(model => model.Category.Name)" />
            </div>

        </div>
        <div class="form-group col-md">
            <label class="d-flex justify-content-center">
                @Html.DisplayNameFor(model => model.Category.Description)
            </label>
            <input class="form-control" disabled value="@Html.DisplayFor(model => model.Category.Description)" />
        </div>

    </div>
</div>

<div class="mt-2 d-flex justify-content-lg-center">
    <a asp-action="Edit" asp-route-id="@Model.ProductId" class="mr-2 btn btn-primary">Edit</a> 
    <a asp-action="Index" class="ml-2 btn btn-light">Back to List</a>
</div>
