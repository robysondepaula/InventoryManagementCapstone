@model IEnumerable<RCL_Inventory.Models.Supplier>

@{
    ViewData["Title"] = "Index";
}

@{ if (TempData["success"] != null)
    {
        <div class="d-flex justify-content-center alert alert-success mt-2">
            @TempData["success"]
        </div>
    }
}


<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-light">Create New Supplier</a>
</p>
<table id="myTable" class="table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telephone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccountNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address.City)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telephone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AccountNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address.City)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.SupplierId"><img src="~/images/edit.png" alt="..." class="img-responsive img-rounded" style="width:30px"></a> |
                    <a asp-action="Details" asp-route-id="@item.SupplierId"><img src="~/images/details.png" alt="..." class="img-responsive img-rounded" style="width:30px"></a> |
                    <a asp-action="Delete" asp-route-id="@item.SupplierId"><img src="~/images/delete.png" alt="..." class="img-responsive img-rounded" style="width:30px"></a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {

    <script>
        $(document).ready(function () {
            $('#myTable').DataTable();
        });
    </script>
}

