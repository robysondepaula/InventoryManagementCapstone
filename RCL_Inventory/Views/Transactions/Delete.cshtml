@model RCL_Inventory.Models.Transaction

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
<h3>Are you sure you want to delete this?</h3>
<div>
    <h1 class="font-weight-bolder">Transaction Purchase Delete</h1>

    <div>
        <div class="card mt-3">
            <div class="card-header font-weight-bolder d-flex justify-content-center pr-5"> Transaction Type</div>
            <div class="card-body d-flex justify-content-center pl-5">
                <h5 class="col-sm-2">
                    @Html.DisplayFor(model => model.TransactionType.Name)
                </h5>
            </div>
        </div>
    </div>


    <div class="card mt-3">
        <div class="card-header font-weight-bolder"> Transaction Information</div>
        <div class="card-body">
            <div class="card-body row">
                <div class="form-group col-md">
                    <label>
                        @Html.DisplayNameFor(model => model.Date)
                    </label>
                    <input class="form-control" disabled value="@Html.DisplayFor(model => model.Date)" />
                </div>

                <div class="form-group col-md">
                    <label>
                        @Html.DisplayNameFor(model => model.Quantity)
                    </label>
                    <input class="form-control" disabled value="@Html.DisplayFor(model => model.Quantity)" />
                </div>
            </div>
        </div>
    </div>

    <div class="card mt-3">
        <div class="card-header font-weight-bolder"> Product Information</div>
        <div class="card-body">
            <div class="card-body row">
                <div class="form-group col-md">
                    <label>
                        @Html.DisplayNameFor(model => model.CategoryId)
                    </label>
                    <input class="form-control" disabled value="@Html.DisplayFor(model => model.CategoryId)" />
                </div>

                <div class="form-group col-md">
                    <label>
                        @Html.DisplayNameFor(model => model.Product.Name)
                    </label>
                    <input class="form-control" disabled value="@Html.DisplayFor(model => model.Product.Name)" />
                </div>
            </div>
        </div>
    </div>

    <div class="card mt-3">
        <div class="card-header font-weight-bolder"> Supplier Information</div>
        <div class="card-body">


            <div class="card-body row">
                <div class="col-md">

                    <div class="form-group col-md">
                        <label>@Html.DisplayNameFor(model => model.Supplier.Name)</label>
                        <input class="form-control" disabled value="@Html.DisplayFor(model => model.Supplier.Name)" />
                    </div>

                </div>
            </div>
        </div>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="TransactionId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
